{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ESNext",
		"sourceMap": false,
		"strict": true,
		"lib": [
			"DOM",
			"ES2020"
		],
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noEmitOnError": true,
		"baseUrl": "./source",
		"outDir": "./out",
		"declaration": false,
		"declarationMap": false,
		"removeComments": false,
		"stripInternal": true
	},
	"include": [
		"source",
		"test"
	],
	"exclude": [
		"node_modules",
		"dist",
		".vs",
		".vscode"
	],
	"compileOnSave": false,
	"typeAcquisition": {
		"enable": true
	}
}